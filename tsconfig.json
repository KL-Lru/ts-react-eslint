{
  "compilerOptions": {
    /* Common Options */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "noEmit": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
